{
    "name": "donbidon/tunneled-webhooks",
    "type": "project",
    "description": "Tunneled Webhooks",
    "homepage": "https://github.com/donbidon/tunneled-webhooks",
    "keywords": ["php", "tunneling", "webhooks"],
    "license": "MIT",
    "authors": [
        {
            "name":     "donbidon",
            "homepage": "http://donbidon.rf.gd/"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable":      true,
    "require": {
        "donbidon/core":                 "^0.1",
        "irazasyed/telegram-bot-sdk":    "^2.0",
        "php-curl-class/php-curl-class": "dev-master"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.2",
        "donbidon/lib-phpunit":      "dev-develop"
    },
    "autoload": {
        "psr-4": {
             "donbidon\\TunneledWebhooks\\": "src"
         }
    },
    "autoload-dev": {
        "psr-4": {
             "donbidon\\TunneledWebhooks\\": ["tests", "tests/src"],
             "donbidon\\Core\\": ["vendor/donbidon/core/tests/src"]
         }
    },
    "scripts": {
        "check-code": [
            "\"vendor/bin/phpcs\" --standard=phpcs.xml -snp --encoding=utf-8 src/ tests/ bin/ www/ --report-width=150"
        ],
        "test": [
            "\"vendor/bin/phpunit\""
        ],
        "test-cov": [
            "\"vendor/bin/phpunit\" --coverage-clover build/logs/clover.xml"
        ],
        "test-cov-upload": [
            "wget https://scrutinizer-ci.com/ocular.phar && php ocular.phar code-coverage:upload --format=php-clover build/logs/clover.xml"
        ]
    }
}
